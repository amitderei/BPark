<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.BparkClientController">

    <top>
        <Label fx:id="connectionLabel" text="Checking connection..." style="-fx-padding: 10"/>
    </top>

    <center>
        <TableView fx:id="orderTable">
            <columns>
				<TableColumn fx:id="orderNumberCol" text="order_number" prefWidth="120"/>
				<TableColumn fx:id="parkingCol" text="parking_space" prefWidth="120"/>
				<TableColumn fx:id="orderDateCol" text="order_date" prefWidth="140"/>
				<TableColumn fx:id="confirmCol" text="confirmation_code" prefWidth="160"/>
				<TableColumn fx:id="subscriberCol" text="subscriber_id" prefWidth="140"/>
				<TableColumn fx:id="placingDateCol" text="date_of_placing_an_order" prefWidth="180"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="5" style="-fx-padding: 10">
            <HBox spacing="5">
                <TextField fx:id="updateOrderId" promptText="Order Number" />
                <TextField fx:id="updateField" promptText="Field to Update" />
                <TextField fx:id="updateValue" promptText="New Value" />
                <Button text="Update" onAction="#updateOrder" />
            </HBox>
            <Button text="Load Orders" onAction="#loadOrders" />
        </VBox>
    </bottom>

</BorderPane>
