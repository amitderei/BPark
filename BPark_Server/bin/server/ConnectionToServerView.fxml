<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dragArea" prefHeight="600.0" prefWidth="450.0" stylesheets="@ConnectionToServerView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="server.ServerController">
    <children>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="450.0" spacing="15.0">
            <!-- Header label -->
            <Label fx:id="lblConnection" styleClass="headline" text="Server connection">
                <font>
                    <Font name="System Bold" size="26.0" />
                </font>
            </Label>
            <Label fx:id="lblEx" text="Enter port number" />
            <TextField fx:id="txtPort" maxWidth="200.0" styleClass="text-field" />
            <Button fx:id="btnSend" maxWidth="150.0" onAction="#connect" text="Connect" />
            <TextArea fx:id="txtConnectedClients" editable="false" prefHeight="120.0" prefWidth="443.0" styleClass="text-area" wrapText="true" />
            <Button fx:id="btnExit" maxWidth="100.0" onAction="#exitApplication" text="Exit" />
        </VBox>
    </children>
</AnchorPane>
