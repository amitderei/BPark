<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="server.ServerController">
   <children>
      <Pane layoutX="-4.0" prefHeight="500.0" prefWidth="350.0">
         <children>
            <Label fx:id="lblConnection" layoutX="87.0" layoutY="55.0" text="Server connection">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextField fx:id="txtPort" layoutX="107.0" layoutY="160.0" />
            <Button fx:id="btnSend" layoutX="153.0" layoutY="232.0" mnemonicParsing="false" onAction="#connect" text="Connect" />
            <Label fx:id="lblEx" layoutX="133.0" layoutY="110.0" text="Enter port number" />
            <Button fx:id="btnRefreshClients" layoutX="107.0" layoutY="280.0" mnemonicParsing="false" onAction="#showConnectedClients" text="Show Connected Clients" />
            <TextArea fx:id="txtConnectedClients" layoutX="20.0" layoutY="320.0" prefHeight="100.0" prefWidth="300.0" editable="false" wrapText="true" />
         </children>
      </Pane>
   </children>
</AnchorPane>
