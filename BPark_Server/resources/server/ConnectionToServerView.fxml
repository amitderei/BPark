<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="server.ServerController">
    <children>
        <VBox alignment="CENTER" spacing="15.0" prefHeight="600.0" prefWidth="450.0">
            <!-- Header label -->
            <Label fx:id="lblConnection" text="Server connection">
                <font>
                    <Font name="System Bold" size="26.0" />
                </font>
            </Label>
            <Label fx:id="lblEx" text="Enter port number" />
            <TextField fx:id="txtPort" maxWidth="200.0" />
            <Button fx:id="btnSend" text="Connect" onAction="#connect" maxWidth="150.0" />
            <Button fx:id="btnRefreshClients" text="Show Connected Clients" onAction="#showConnectedClients" maxWidth="200.0" />
            <TextArea fx:id="txtConnectedClients" prefHeight="120.0" prefWidth="300.0" editable="false" wrapText="true" />
            <Button fx:id="btnExit" text="Exit" onAction="#exitApplication" maxWidth="100.0" />
        </VBox>
    </children>
</AnchorPane>

