<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="453.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.VehiclePickupController">
   <children>
      <VBox alignment="CENTER" spacing="15.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Vehicle Pickup">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label text="Enter Subscriber Code:" />
            <TextField fx:id="txtSubscriberCode" promptText="e.g. 1001" />
            <Button fx:id="btnNext" mnemonicParsing="false" onAction="#validateSubscriber" text="Verify Code" />
            <Label text="Or scan your tag:" />
            <TextField fx:id="txtTagId" promptText="e.g. TAG_001" />
            <Button fx:id="btnReadTag" mnemonicParsing="false" onAction="#handleReadTag" text="Verify Tag" />
            <Label fx:id="lblParkingPrompt" managed="false" text="Enter your parking code:" visible="false" />
            <TextField fx:id="txtParkingCode" managed="false" promptText="e.g. 654321" visible="false" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="btnCollectCar" mnemonicParsing="false" onAction="#collectCar" text="Collect Car" visible="false" managed="false" />
                  <Button fx:id="btnLostCode" mnemonicParsing="false" onAction="#forgotMyCode" text="I Lost My Code" visible="false" managed="false" />
               </children>
            </HBox>
            <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" wrapText="true" />
         </children>
      </VBox>
   </children>
</AnchorPane>
