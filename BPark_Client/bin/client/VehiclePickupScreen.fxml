<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.VehiclePickupController">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.leftAnchor="80.0" AnchorPane.rightAnchor="80.0" AnchorPane.topAnchor="30.0">

            <!-- Title -->
            <Label text="Vehicle Pickup">
                <font>
                    <Font size="26.0" />
                </font>
            </Label>

            <!-- Subscriber Code -->
            <Label text="Enter Subscriber Code:" />
            <TextField fx:id="txtSubscriberCode" promptText="e.g. 1001" />
            <Button fx:id="btnNext" onAction="#validateSubscriber" text="Verify Code" />

            <!-- Tag ID -->
            <Label text="Or scan your tag:" />
            <TextField fx:id="txtTagId" promptText="e.g. TAG_001" />
            <Button fx:id="btnReadTag" onAction="#handleReadTag" text="Verify Tag" />

            <!-- Parking Code -->
            <Label fx:id="lblParkingPrompt" managed="false" text="Enter your parking code:" visible="false" />
            <TextField fx:id="txtParkingCode" managed="false" promptText="e.g. 654321" visible="false" />

            <!-- Action Buttons in Row -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btnCollectCar" managed="false" onAction="#collectCar" text="Collect Car" visible="false" />
                <Button fx:id="btnLostCode" managed="false" onAction="#forgotMyCode" text="I Lost My Code" visible="false" />
            </HBox>
            <!-- Status -->
            <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" wrapText="true" />

        </VBox>
    </children>
</AnchorPane>
