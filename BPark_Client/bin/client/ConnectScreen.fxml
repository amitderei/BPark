<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ConnectController">
   <children>
      <Label fx:id="connectionLabel" layoutX="20.0" layoutY="20.0" text="Checking connection..." />
      <Label fx:id="connectHeadline" layoutX="360.0" layoutY="80.0" text="Connect">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="ipTextField" layoutX="300.0" layoutY="160.0" promptText="Enter server IP" prefWidth="200.0" />
      <Label fx:id="statusLabel" layoutX="300.0" layoutY="210.0" prefWidth="300.0" />
      <Button fx:id="connectButton" layoutX="330.0" layoutY="260.0" mnemonicParsing="false"
              onAction="#connectToServer" text="Connect to Server" prefWidth="140.0" />
      <Button fx:id="exitButton" layoutX="20.0" layoutY="460.0" mnemonicParsing="false"
              onAction="#exitApplication" text="Exit" prefWidth="60.0" />
   </children>
</AnchorPane>
