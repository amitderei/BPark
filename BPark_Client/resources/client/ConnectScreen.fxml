<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" stylesheets="@/style/ConnectScreen.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ConnectController">
   <children>
      <ToolBar fx:id="dragArea" prefHeight="25.0" prefWidth="800.0" styleClass="toolbar">
         <items>
            <Label fx:id="connectionLabel" styleClass="toolbar-check-connection" text="Checking connection..." />
            <Pane prefHeight="29.0" prefWidth="243.0" />
            <Label styleClass="toolbar-label" text="BPARK">
               <font>
                  <Font name="Aharoni Bold" size="18.0" />
               </font>
            </Label>
            <Pane prefHeight="35.0" prefWidth="270.0" />
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitApplication" prefWidth="60.0" text="Exit" />
         </items>
      </ToolBar>
      <Pane layoutX="170.0" layoutY="88.0" prefHeight="361.0" prefWidth="478.0" styleClass="pane-box">
         <children>
            <Label fx:id="connectHeadline" layoutX="193.0" layoutY="39.0" text="Connect">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="ipTextField" layoutX="139.0" layoutY="137.0" prefWidth="200.0" promptText="Enter server IP" />
            <Button fx:id="connectButton" layoutX="169.0" layoutY="228.0" mnemonicParsing="false" onAction="#connectToServer" prefWidth="140.0" text="Connect to Server" />
            <Label fx:id="statusLabel" layoutX="89.0" layoutY="277.0" prefWidth="300.0" styleClass="status-label" textAlignment="CENTER" />
         </children>
      </Pane>
   </children>
</AnchorPane>
