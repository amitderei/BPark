<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.GuestMainController">

    <!-- Top toolbar -->
    <top>
        <ToolBar>
            <!-- Button to return to main screen (same screen for guest) -->
            <Button text="🏠 Home" onAction="#handleHomeClick" />

            <!-- Spacer -->
            <Pane HBox.hgrow="ALWAYS" />

            <!-- Button to logout and return to user type selection -->
			<Button fx:id="logoutButton" text="🔓 Logout" onAction="#handleLogoutClick" />
        </ToolBar>
    </top>

    <!-- Center content -->
    <center>
    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
        </padding>

        <Label text="Welcome, Guest!" style="-fx-font-size: 18px;" />
        <Button text="Check Parking Availability" onAction="#handleCheckAvailability" />
    </VBox>
</center>

</BorderPane>


