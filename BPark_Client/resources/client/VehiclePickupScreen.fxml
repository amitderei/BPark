<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="453.0" prefWidth="600.0" stylesheets="@VehiclePickupScreen.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.VehiclePickupController">
   <children>
      <VBox alignment="CENTER" layoutX="17.0" prefHeight="421.0" prefWidth="570.0" spacing="15.0" styleClass="vbox-box" AnchorPane.leftAnchor="17.0" AnchorPane.rightAnchor="13.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label styleClass="headline" text="Vehicle Pickup">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Pane prefHeight="211.0" prefWidth="508.0" styleClass="pane-box">
               <children>
                  <Label layoutX="98.0" layoutY="10.0" text="Step1: Enter your subscriber code or scan your tag:" />
                  <TextField fx:id="txtSubscriberCode" layoutX="144.0" layoutY="44.0" maxWidth="200.0" prefHeight="25.0" prefWidth="305.0" promptText="e.g. 1001" />
                  <Button fx:id="btnNext" layoutX="368.0" layoutY="45.0" mnemonicParsing="false" onAction="#validateSubscriber" text="Verify Code" />
                  <TextField fx:id="txtTagId" layoutX="144.0" layoutY="94.0" maxWidth="200.0" prefHeight="25.0" prefWidth="305.0" promptText="e.g. TAG_001" />
                  <Button fx:id="btnReadTag" layoutX="368.0" layoutY="96.0" mnemonicParsing="false" onAction="#handleReadTag" text="Verify Tag" />
                  <Label layoutX="40.0" layoutY="51.0" text="Subscriber Code:" />
                  <Label layoutX="64.0" layoutY="101.0" text="Tag ID:" />
               </children>
            </Pane>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="pane-box">
               <children>
                  <Label fx:id="lblParkingPrompt" managed="false" text="Step 2: Enter your parking code:" visible="false" />
                  <TextField fx:id="txtParkingCode" managed="false" promptText="e.g. 654321" visible="false" />
                  <HBox alignment="CENTER" prefHeight="66.0" prefWidth="508.0" spacing="20.0">
                     <children>
                        <Button fx:id="btnCollectCar" managed="false" mnemonicParsing="false" onAction="#collectCar" text="Collect Car" visible="false" />
                        <Button fx:id="btnLostCode" managed="false" mnemonicParsing="false" onAction="#forgotMyCode" text="I Lost My Code" visible="false" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Label fx:id="lblStatus" style="-fx-text-fill: green;" text="" wrapText="true" />
         </children>
      </VBox>
   </children>
</AnchorPane>
