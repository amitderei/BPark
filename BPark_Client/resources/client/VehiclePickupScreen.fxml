<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.VehiclePickupController"
            prefWidth="800.0" prefHeight="500.0">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
            <!-- Screen Title -->
            <Label text="Vehicle Pickup">
                <font>
                    <Font size="26.0" />
                </font>
            </Label>

            <!-- Subscriber Code Input -->
            <Label text="Enter Subscriber Code:" />
            <TextField fx:id="txtSubscriberCode" promptText="e.g. 1001" />

            <Button fx:id="btnNext" text="Next" onAction="#validateSubscriber" />

            <!-- Confirmation Code Section -->
            <Label fx:id="lblParkingPrompt" text="Enter your parking code:"
                   visible="false" managed="false" />
            <TextField fx:id="txtParkingCode" promptText="e.g. 654321"
                       visible="false" managed="false" />

            <!-- Action Buttons -->
            <Button fx:id="btnCollectCar" text="Collect Car" onAction="#collectCar"
                    visible="false" managed="false" />
            <Button fx:id="btnLostCode" text="I Lost My Code" onAction="#sendLostCode"
                    visible="false" managed="false" />
            <Button fx:id="btnExtend" text="Extend Parking" onAction="#extendParking"
                    visible="false" managed="false" />

            <!-- Status Feedback -->
            <Label fx:id="lblStatus" text="" wrapText="true" style="-fx-text-fill: green;" />
        </VBox>
    </children>
</AnchorPane>
