<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="453.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ParkingReportController">
   <children>
      <Label fx:id="headline" layoutX="221.0" layoutY="51.0" text="Monthly Parking Report">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <BarChart fx:id="hoursParkingChart" layoutX="126.0" layoutY="84.0" prefHeight="174.0" prefWidth="363.0">
         <xAxis>
            <CategoryAxis side="BOTTOM" />
         </xAxis>
         <yAxis>
            <NumberAxis side="LEFT" />
         </yAxis>
      </BarChart>
      <PieChart fx:id="parkingPieChart" layoutX="32.0" layoutY="247.0" prefHeight="192.0" prefWidth="243.0" />
      <PieChart fx:id="latesPieChart" layoutX="326.0" layoutY="247.0" prefHeight="192.0" prefWidth="243.0" />
      <Label layoutX="26.0" layoutY="13.0" text="Year:" />
      <ComboBox fx:id="yearCombo" layoutX="72.0" layoutY="12.0" prefHeight="17.0" prefWidth="73.0" />
      <Label layoutX="156.0" layoutY="13.0" text="Month:" />
      <ComboBox fx:id="monthCombo" layoutX="210.0" layoutY="12.0" prefHeight="17.0" prefWidth="73.0" />
      <Button fx:id="sumbit" layoutX="306.0" layoutY="11.0" mnemonicParsing="false"
              onAction="#getParkingReportFromServer" text="Load Report" />
   </children>
</AnchorPane>
