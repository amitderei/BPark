<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.RegisterSubscriberController"
            prefWidth="700.0" prefHeight="550.0">

    <VBox spacing="16" alignment="TOP_CENTER"
          AnchorPane.topAnchor="20.0"
          AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0">

        <Label text="Register New Subscriber"
               style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <HBox spacing="40" alignment="TOP_CENTER">

            <!-- Column 1 -->
            <VBox spacing="6">
                <Label text="User ID" />
                <TextField fx:id="txtUserId" />
				<Label fx:id="errUserId" textFill="red" visible="true" text=" " minHeight="18" />

                <Label text="First Name" />
                <TextField fx:id="txtFirstName" />
                <Label fx:id="errFirstName" textFill="red" visible="false" />

                <Label text="Last Name" />
                <TextField fx:id="txtLastName" />
                <Label fx:id="errLastName" textFill="red" visible="false" />

                <Label text="Phone Number" />
                <TextField fx:id="txtPhone" />
                <Label fx:id="errPhone" textFill="red" visible="false" />
            </VBox>

            <!-- Column 2 -->
            <VBox spacing="6">
                <Label text="Email" />
                <TextField fx:id="txtEmail" />
                <Label fx:id="errEmail" textFill="red" visible="false" />

                <Label text="Username" />
                <TextField fx:id="txtUsername" />
                <Label fx:id="errUsername" textFill="red" visible="false" />

                <Label text="Vehicle ID" />
                <TextField fx:id="txtVehicleId" />
                <Label fx:id="errVehicleId" textFill="red" visible="false" />

                <Button fx:id="btnRegister"
                        text="Register Subscriber"
                        onAction="#handleRegisterClick"
                        maxWidth="180"
                        style="-fx-background-color: linear-gradient(to right, #00c6ff, #0072ff); -fx-text-fill: white; -fx-font-weight: bold;" />

                <Label fx:id="lblStatus"
                       wrapText="true"
                       style="-fx-text-fill: green; -fx-font-size: 13px;"
                       maxWidth="250" />
            </VBox>

        </HBox>
    </VBox>
</AnchorPane>

