<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:controller="controllers.SubscriberStatusController"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefWidth="600.0" prefHeight="453.0"
      spacing="10">

    <!-- uniform padding 10px -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Filters row -->
    <HBox spacing="10">
        <Label text="Month:" />
        <ComboBox fx:id="cmbMonth" prefWidth="120"/>
        <Label text="Year:" />
        <ComboBox fx:id="cmbYear" prefWidth="100"/>
		<Button fx:id="btnLoad" text="Load Report"/>
    </HBox>

    <!-- Charts row -->
    <HBox spacing="10">

        <!-- BarChart -->
        <BarChart fx:id="barChart" prefWidth="380.0" prefHeight="300.0">
            <xAxis>
                <CategoryAxis label="Subscriber"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Hours / Count"/>
            </yAxis>
        </BarChart>

        <!-- PieChart -->
        <PieChart fx:id="pieChart" prefWidth="180.0" prefHeight="300.0"/>
    </HBox>

    <!-- Table -->
    <TableView fx:id="tblReport" prefHeight="160.0">
        <columns>
            <TableColumn fx:id="colCode"    text="Code"    prefWidth="60.0"/>
            <TableColumn fx:id="colName"    text="Name"    prefWidth="150.0"/>
            <TableColumn fx:id="colEntries" text="Entries" prefWidth="70.0"/>
            <TableColumn fx:id="colExtends" text="Extends" prefWidth="70.0"/>
            <TableColumn fx:id="colLates"   text="Lates"   prefWidth="70.0"/>
            <TableColumn fx:id="colHours"   text="Hours"   prefWidth="70.0"/>
        </columns>
    </TableView>

</VBox>
