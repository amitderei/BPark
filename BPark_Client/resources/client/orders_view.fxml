<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.OrderViewController">

    <top>
		<HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10">
		    <Label fx:id="connectionLabel" text="Checking connection..." />
		    <Pane HBox.hgrow="ALWAYS" />
		    <TextField fx:id="ipTextField" promptText="Enter server IP" />
		    <Button fx:id="connectButton" onAction="#connectToServer" text="Connect to Server" />
		</HBox>

    </top>

    <center>
        <TableView fx:id="orderTable">
            <columns>
                <TableColumn fx:id="orderNumberCol" prefWidth="120" text="order_number" />
                <TableColumn fx:id="parkingCol" prefWidth="120" text="parking_space" />
                <TableColumn fx:id="orderDateCol" prefWidth="140" text="order_date" />
                <TableColumn fx:id="confirmCol" prefWidth="160" text="confirmation_code" />
                <TableColumn fx:id="subscriberCol" prefWidth="140" text="subscriber_id" />
                <TableColumn fx:id="placingDateCol" prefWidth="180" text="date_of_placing_an_order" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="5" style="-fx-padding: 10">
            <HBox spacing="5">
                <TextField fx:id="updateOrderId" promptText="Order Number" />
                <ComboBox fx:id="fieldComboBox" promptText="Field to Update" />
                <TextField fx:id="updateValue" promptText="New Value" />
                <DatePicker fx:id="updateDatePicker" managed="false" promptText="New Date" visible="false" />
                <Button fx:id="updateButton" disable="true" onAction="#updateOrder" text="Update" />
            <Button fx:id="searchOrder" disable="true" onAction="#loadSpecificOrder" text="Search Order" />
                <Button fx:id="loadButton" disable="true" onAction="#loadOrders" text="Load All Orders" />
            </HBox>
            <Label fx:id="statusLabel" style="-fx-text-fill: green;" text="" />
            <Button fx:id="exitButton" onAction="#exitApplication" text="Exit" />
        </VBox>
    </bottom>

</BorderPane>
