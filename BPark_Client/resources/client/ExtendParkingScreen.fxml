<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="453.0" prefWidth="600.0" stylesheets="@ExtendParkingScreen.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ExtendParkingController">
    <VBox alignment="CENTER" layoutX="10.0" layoutY="11.0" prefHeight="430.0" prefWidth="577.0" spacing="20" styleClass="extend-box">
      <Label styleClass="headline" text="Extend Parking Time">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
        <Label style="-fx-font-size: 14px;" text="Enter your parking code:" />
        <TextField fx:id="txtParkingCode" maxWidth="400.0" prefHeight="29.0" prefWidth="400.0" promptText="e.g. 800101" style="-fx-font-size: 14px; -fx-pref-width: 250px;" />
        <Button fx:id="btnExtend" onAction="#handleExtendClick" style="-fx-font-size: 14px; -fx-padding: 6px 20px;" text="Extend by 4 hours" />
      <Pane prefHeight="47.0" prefWidth="398.0" styleClass="status-box">
         <children>
              <Label fx:id="lblStatus" layoutX="131.0" layoutY="15.0" prefHeight="19.0" prefWidth="306.0" style="-fx-text-fill: #2b5797; -fx-font-size: 13px;" styleClass="status-msg" wrapText="true" />
         </children>
      </Pane>
    </VBox>
</AnchorPane>
