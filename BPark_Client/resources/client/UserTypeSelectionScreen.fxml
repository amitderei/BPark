<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.UserTypeSelectionController"
            prefWidth="800.0" prefHeight="500.0">

    <Label layoutX="300.0" layoutY="50.0" text="Select User Type">
        <font>
            <Font size="26.0"/>
        </font>
    </Label>

    <Button fx:id="guestBtn" layoutX="320.0" layoutY="120.0" prefWidth="160.0"
            text="Guest" onAction="#handleGuest"/>

    <Button fx:id="subscriberBtn" layoutX="320.0" layoutY="180.0" prefWidth="160.0"
            text="Subscriber" onAction="#handleSubscriber"/>

    <Button fx:id="attendantBtn" layoutX="320.0" layoutY="240.0" prefWidth="160.0"
            text="Attendant" onAction="#handleAttendant"/>

    <Button fx:id="managerBtn" layoutX="320.0" layoutY="300.0" prefWidth="160.0"
            text="Manager" onAction="#handleManager"/>

</AnchorPane>
