<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="controllers.LoginController">
    <children>
        <Button fx:id="backButton" layoutX="20.0" layoutY="20.0" onAction="#handleBack" prefWidth="80.0" text="← Back" />
        <Label layoutX="340.0" layoutY="60.0" text="Login Screen">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label layoutX="260.0" layoutY="140.0" text="Username:" />
        <TextField fx:id="username" layoutX="360.0" layoutY="140.0" prefWidth="180.0" />
        <Label layoutX="260.0" layoutY="190.0" text="Password:" />
        <PasswordField fx:id="code" layoutX="360.0" layoutY="190.0" prefWidth="180.0" />
        <Button fx:id="submit" layoutX="360.0" layoutY="250.0" onAction="#handleLoginClick" prefWidth="100.0" text="Login" />
        <Label fx:id="lblError" layoutX="360.0" layoutY="300.0" textFill="red" />
        <Button fx:id="btnExit" layoutX="34.0" layoutY="438.0" mnemonicParsing="false" onAction="#handleExitClick" text="Exit" />
    </children>
</AnchorPane>
